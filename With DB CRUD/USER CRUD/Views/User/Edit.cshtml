
@model USER_CRUD.Yash.User_Master_Table_1
@*User_CRUD :-   This a Projecct
    Yash :-  This a Folder in this store the class
    User_Master_Table :- This is a Class Name *@
@{
    ViewBag.Title = "Edit";

}

<style>
    #TY {
        margin: 20px;
    }

    .error {
        color: red;
    }
</style>
<h4>
    @ViewBag.TotalStudents
</h4>

@using (Html.BeginForm("AddUser", "User", FormMethod.Post))
{
    <div class="container" id="TY">
        <form class="form-horizontal">
            <div class="form-group">
                @Html.HiddenFor(x => x.User_MasterID)
                <label>First Name</label>
                @Html.ValidationMessageFor(x => x.User_MasterFName, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.User_MasterFName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>SurName</label>
                @Html.ValidationMessageFor(x => x.User_MasterSName, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.User_MasterSName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Email</label>
                @Html.ValidationMessageFor(x => x.User_MasterEmail, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.User_MasterEmail, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Mobile_Number</label>
                @Html.ValidationMessageFor(x => x.User_Master_MO_BO, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.User_Master_MO_BO, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>

                <button type="reset" class="btn btn-danger">Reset</button>
            </div>
        </form>
    </div>

}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
